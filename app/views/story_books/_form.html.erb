<br><br>
<div id="form">

<h1>Now, story time!</h1>

<% if @errors && @errors.any? %>
<ul class="errors"> <p>
<strong>Oh-oh! Fix these errors to move on:</strong>
</p>
<% @errors.each do |error| %>
<li>
  <%= error %>
</li>
<% end %>
</ul>
<% end %> <br>

<%= form_for @story_book do |f| %>

<p><%= f.label :character_id, :style => "display: inline" %>'s name: <font color=#EB3E37><strong><%= @character.name.titleize %></strong></font><br></p>
<%= f.hidden_field :character_id, value: @character.id %>

<%= f.label :story_id, "Main issue:" %>
<%= f.collection_select :story_id, Story.order(:issue).all, :id, :issue, :prompt => '~select the main issue~' %><br>

<%= f.label :tag, "How would you like to entitle your story?" %>
<%= f.text_field :tag %> <br>

<%= f.label :comment, " Comment (just for yourself):", :style => "display: inline"%>
<%= f.text_field :comment %>
<br><br>

<%= f.submit 'Read your story!', :style => "color: #0E2B3F; font-size: 20pt; border: 2px solid; background-color: lightgreen; padding: 15px 20px; border-radius: 20px;"%><br>

<% end %>

</div>
