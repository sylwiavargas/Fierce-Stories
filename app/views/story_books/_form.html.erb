<%= link_to "Story Book Index Page", story_books_path %> <br>
<br><br>

<%= form_for @story_book do |f| %>

<%= f.label :tag %>
<%= f.text_field :tag %> <br>

<%= f.label :comment %>
<%= f.text_field :comment %><br>

<%= f.label :story_id %>
<%= f.collection_select :story_id, Story.order(:title).all, :id, :title, :prompt => '~please select~' %><br>

<%= f.label :character_id %>:
<%= @character.name %><br>
<%= f.hidden_field :character_id, value: @character.id %>

<%= f.submit %><br>

<% end %>
