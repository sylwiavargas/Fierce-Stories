<h3>Help us be <br>more inclusive</h3>

<% if @errors && @errors.any? %>
  <p><strong>Oh-oh! Fix these errors to move on:</strong></p>
  <ul class="errors">
    <% @errors.each do |error| %>
    <li>
      <%= error %>
    </li>
    <% end %>
  </ul>
<% end %>

<div class="signup">
<%= form_for @race, :html => {:class => 'login'} do |f| %>
  <%= f.label :name, "Race or ethnicity missing in our database:"  %><br>
  <%= f.text_field :name %>
  <%= f.submit 'Done!', class: "login-button"%>
<% end %>
</div>
